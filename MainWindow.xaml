<Window x:Class="MOVIE_APPLICATION_APA1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Library Management System" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox x:Name="SearchTitleBox" Width="150" Margin="5" />
            <TextBox x:Name="SearchIDBox" Width="150" Margin="5" />
            <Button Content="Search Title" Click="SearchByTitle_Click" Margin="5"/>
            <Button Content="Search ID" Click="SearchByID_Click" Margin="5"/>
        </StackPanel>

        <DataGrid x:Name="MovieGrid" Grid.Row="1" AutoGenerateColumns="False" Margin="0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MovieID}" Width="*"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Director" Binding="{Binding Director}" Width="*"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="*"/>
                <DataGridTextColumn Header="Year" Binding="{Binding ReleaseYear}" Width="*"/>
                <DataGridTextColumn Header="Available" Binding="{Binding IsAvailable}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add Movie" Click="AddMovie_Click" Margin="5"/>
            <Button Content="Borrow Movie" Click="BorrowMovie_Click" Margin="5"/>
            <Button Content="Return Movie" Click="ReturnMovie_Click" Margin="5"/>
            <Button Content="Sort by Title" Click="SortByTitle_Click" Margin="5"/>
            <Button Content="Sort by Year" Click="SortByYear_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
